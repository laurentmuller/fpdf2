<?xml version="1.0"?>
<psalm xmlns="https://getpsalm.org/schema/config"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
       allowStringToStandInForClass="true"
       findUnusedVariablesAndParams="true"
       findUnusedBaselineEntry="true"
       findUnusedPsalmSuppress="true"
       strictBinaryOperands="true"
       findUnusedCode="false"
       phpVersion="8.2"
       errorLevel="1">

    <projectFiles>
        <directory name="src"/>
        <directory name="tests"/>
        <ignoreFiles>
            <directory name="src/font"/>
            <directory name="tests/fonts"/>
            <file name="tests/FPDF.php"/>
            <file name="tests/resources/font_test.php"/>
            <directory name="vendor"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers/>

    <plugins>
        <pluginClass class="Orklah\NotEmpty\Plugin"/>
        <pluginClass class="Orklah\PsalmInsaneComparison\Plugin"/>
        <pluginClass class="Orklah\StrictEquality\Plugin"/>
    </plugins>
</psalm>
